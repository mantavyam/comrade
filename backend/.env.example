# Comrade Backend Environment Variables
# Copy this file to .env and fill in your actual values

# App Configuration
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=path/to/your/firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Database Configuration (if using SQLite or other DB)
DATABASE_URL=sqlite:///./comrade.db

# RSS Feed URLs (default values are set in config.py)
PIB_RSS_URL=https://pib.gov.in/rss/leng.xml
HINDU_RSS_URL=https://www.thehindu.com/news/national/feeder/default.rss
INDIAN_EXPRESS_RSS_URL=https://indianexpress.com/section/india/feed/

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
